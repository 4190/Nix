@model Shortener.Dtos.ShortenedLinkDto

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>


@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm("GenerateShortenedLink", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.OriginalLink)
        @Html.TextBoxFor(m => m.OriginalLink, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.OriginalLink, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-outline-primary">Save</button>
}
